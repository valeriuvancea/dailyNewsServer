{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "allowJs": true,
      "checkJs": true,
      "outDir": "./bin",
      "sourceMap": true,
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true
    },
    "include": [
      "./*.ts", "api/*.ts", "tools/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }